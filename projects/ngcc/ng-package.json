{
  "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../dist/ngcc",
  "lib": {
    "entryFile": "src/public-api.ts",
    "styleIncludePaths": [
      "src/styles"
    ],
    "flatModuleFile": "ngcc"
  },
  "assets": [
   {
      "input": "src/styles",
      "glob": "**/*.scss",
      "output": "styles"
    },
    "README.md",
    "LICENSE"
  ],
  "allowedNonPeerDependencies": [],
  "keepLifecycleScripts": false
}
